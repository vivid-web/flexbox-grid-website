@import '../bootstrap.styl'

.card
  height: 100%
  overflow: hidden
  padding: 1rem
  width: 100%

  +variant('light')
    background-color: $opacity_white_20
    border: 1px solid $opacity_black_20

  +variant('dark')
    background-color: $opacity_black_20
    border: 1px solid $opacity_white_20
