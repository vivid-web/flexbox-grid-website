@import '../../bootstrap.styl'

.block
  +has('content')
    font-weight: 300
    line-height: 1.5rem
    overflow: hidden
    word-wrap: break-word

    +variant('center')
      text-align : center

    +variant('dark')
      color: $primary_white

    +variant('dark-highlight')
      color: $primary_white

    +variant('light')
      color: $primary_black

    +variant('light-highlight')
      color: $primary_black
